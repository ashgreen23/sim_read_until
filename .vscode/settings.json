{
    "files.watcherExclude": {
        "**/uniform_sequencing/nanosim_runs/**": true,
        "**/uniform_sequencing/sequencing_runs/**": true,
        "runs/**": true,
        ".git/**": true,
    },
    "python.analysis.typeCheckingMode": "off",
    "python.testing.pytestArgs": [
        ".",
        "-s", // show output, added
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "files.exclude": {
        "external/ont_nanosim/": true
    },

    "notebook.output.scrolling": true, // scroll view not opening in VSCode, https://github.com/microsoft/vscode/issues/190599
    "jupyter.debugJustMyCode": false,

    /*
    // Run on save extension
    // see Logs/Extension Host to see if something went wrong
    // debounce needed to avoid multiple runs for rsync
    "filewatcher.commands": [
		{
			"match": ".*",
			"isAsync": false,
			"cmd": "echo '${file}  file content Changed'",
			"event": "onFileChange"
		}
	]
    */
}